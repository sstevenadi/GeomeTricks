<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_lar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/android_lar"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/illustratio"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="77dp"
        android:background="#00000000"
        android:src="@drawable/start_illus" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="290dp"
        android:layout_height="120dp"
        android:layout_below="@+id/illustratio"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="74dp"
        android:background="@drawable/start_logo" />

    <ImageView
        android:layout_below="@+id/logo"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/start_navigation" />

    <ImageView
        android:id="@+id/button_prim"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_below="@+id/navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/start_button_next" />

</RelativeLayout>