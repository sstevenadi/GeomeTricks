<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_lar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@color/blue" >

    <TextView
        android:id="@+id/log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_vertical"
        android:lineSpacingExtra="-10sp"
        android:text="Log in"
        android:textColor="@color/white"
        android:textSize="40dp" />


    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="662dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="-5dp"
        android:background="@drawable/bg" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="92dp"
        app:srcCompat="@drawable/login_illustration" />

    <TextView
        android:id="@+id/your_email"
        android:layout_width="327dp"
        android:layout_height="21dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="-83dp"
        android:layout_marginEnd="60dp"
        android:gravity="top"
        android:text="@string/your_email"
        android:textAppearance="@style/your_email" />

    <View
        android:id="@+id/bg1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="402dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/bg1" />

    <TextView
        android:id="@+id/email"
        android:layout_width="243dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="419dp"
        android:gravity="top"
        android:lineSpacingExtra="-1sp"
        android:text="@string/email"
        android:textAppearance="@style/email" />

    <View
        android:id="@+id/bg1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="468dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/bg1"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/email"
        android:layout_width="243dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="481dp"
        android:gravity="top"
        android:lineSpacingExtra="-1sp"
        android:text="Password"
        android:textAppearance="@style/email"
        tools:ignore="DuplicateIds" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="713dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/logo_navigation" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="3dp"
        app:srcCompat="@drawable/logo_button" />

</RelativeLayout>